# Environment Configuration for AcademIA Render Server

# Server Configuration
PORT=5000
DEBUG=True
LOG_LEVEL=INFO

# AI Service API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
VAPI_API_KEY=your_vapi_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_STORAGE_BUCKET=academaia-storage

# File Paths
TEMP_DIR=./temp
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Processing Configuration
MAX_SECTIONS_PER_DOCUMENT=10
MAX_PROCESSING_TIME_MINUTES=30
SYNC_CONFIDENCE_THRESHOLD=0.95

# Manim Configuration
MANIM_QUALITY=medium_quality  # low_quality, medium_quality, high_quality
MANIM_OUTPUT_FORMAT=mp4
MANIM_FRAME_RATE=30

# Audio Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_FORMAT=mp3
AUDIO_BITRATE=128k

# Video Configuration
VIDEO_CODEC=libx264
VIDEO_BITRATE=2M
VIDEO_RESOLUTION=720p  # 480p, 720p, 1080p

# Sync Configuration
MAX_SYNC_CORRECTION_ATTEMPTS=3
TIMING_TOLERANCE_MS=100
